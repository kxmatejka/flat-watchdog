{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "firebase:emulators:start": "firebase emulators:start -P flat-watchdog --import ./data/firestore --export-on-exit",
    "deploy:scrapeUlovDomovEachHour": "firebase deploy -P flat-watchdog --only functions:scrapeUlovDomovEachHour",
    "deploy:scrapeBezrealitkyEachHour": "firebase deploy -P flat-watchdog --only functions:scrapeBezrealitkyEachHour"
  },
  "engines": {
    "node": "14"
  },
  "main": "build/index.js",
  "dependencies": {
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1",
    "node-fetch": "^2.6.1",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@types/node": "^15.12.4",
    "@types/node-fetch": "^2.5.10",
    "@types/yup": "^0.29.11",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "ts-node": "^10.0.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
